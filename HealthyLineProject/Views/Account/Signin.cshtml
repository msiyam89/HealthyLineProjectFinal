@using R
@model HealthyLineProject.Models.SigninModel


@using (Html.BeginForm())
{


    @Html.LabelFor(x => x.UserName)
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = @Resource.UserName })
    @Html.ValidationMessageFor(x=>x.UserName)


    @Html.LabelFor(x => x.Password)
    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = @Resource.Password })
    @Html.ValidationMessageFor(x => x.Password)
    <br />

    <button type="submit" class="btn btn-primary btn-lg">Submit</button>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}