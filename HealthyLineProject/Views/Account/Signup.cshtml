@using R
@model MvcApplication1.Models.UserProfileModel

@if (ViewBag.Error != "")
    {
        <div>@ViewBag.Error</div>
    }

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resource.Register</legend>
        <ul>
            <li>
