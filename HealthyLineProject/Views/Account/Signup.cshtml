                @Html.TextBoxFor(x => x.MobileNumber)
                @Html.ValidationMessageFor(x => x.MobileNumber)
            </li>
            <li>
                @Html.LabelFor(x => x.TargetWeight)
                @Html.TextBoxFor(x => x.TargetWeight)
                @Html.ValidationMessageFor(x => x.TargetWeight)
