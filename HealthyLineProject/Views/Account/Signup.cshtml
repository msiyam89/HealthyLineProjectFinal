                @Html.TextBoxFor(x => x.CreatedDate)
                @Html.ValidationMessageFor(x => x.CreatedDate)
            </li>
            <li>
                @Html.LabelFor(x => x.CreatedBy)
                @Html.TextBoxFor(x => x.CreatedBy)
