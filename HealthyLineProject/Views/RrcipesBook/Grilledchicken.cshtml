@using R
<fieldset>
   
    <div>
        <h1>
            @Resource.Grilledchicken
        </h1>
        @*<img src="~/Content/Images/imag5.jpg" width="550px" height="550px" />*@

        <ul>
            <h2> @Resource.Ingredients </h2>
            <ol>
                <li>
                    @Resource.MeatFillet9  @*Meat Fillet: 500 grams (longitudinal sliced section)*@

                </li>
                <li>
                    @Resource.Onions9   @*Onions: 1 grain (chopped slices)*@
                </li>
                <li>
                    @Resource.redpepper9   @*red pepper: 1 tablet (chopped slices)*@
                </li>
                <li>
                    @Resource.Yellowpepper9  @*Yellow pepper: 1 tablet (sliced minced)*@

                </li>
                <li>
                    @Resource.Cumin9   @*Cumin: half a teaspoon (ground)*@
                </li>
                <li>
                    @Resource.Redhotpepper9   @*Red hot pepper: half a teaspoon (ground)*@
                </li>
                <li>
                    @Resource.Vegetableoils  @*Vegetable oil: 1 tablespoon*@
                </li>
                <li>
                    @Resource.Salthalf1 @*Salt: half a teaspoon*@
                </li>
                <li>
                    @Resource.BlackPepper1  @*Black Pepper: 1/4 teaspoon*@
                </li>
                <li>
                    @Resource.Bakedavocado9   @*Green Coriander: 2 teaspoon (fresh and chopped)*@
                </li>
                <li>
                    @Resource.Avocadopiece2  @*Avocado: 1 piece (peeled and sliced)*@
                </li>
                <li>
                    @Resource.rosemary9

                </li>

            </ol>
        </ul>
        <ul>
            <h2> @Resource.Howto </h2>
            <ol>
                <li>
                    @Resource.athick9  @*Heat a thick, wide skillet over medium heat, then add oil and meat and stir the meat for 3 minutes until it becomes brown.*@
                </li>
                <li>
                    @Resource.Seasonthe9   @*Season the meat with salt and pepper, and stir for another minute, then lift the meat from the pan and set it aside.*@
                </li>
                <li>
                    @Resource.Addto9	@*Add to the same skillet onions, red pepper, yellow pepper, cumin, ground chili pepper, and stir over medium to high heat for 5 minutes*@
                </li>
                <li>
                    @Resource.Spreadlemon9   @*Spread lemon slices and rosemary in the tray.*@
                </li>
                <li>
                    @Resource.Preheat9   @*Preheat the oven to 200 degrees.*@
                </li>
                <li>
                    @Resource.Cover9   @*Cover the tray with aluminum foil and put it in the oven for 25 minutes.*@
                </li>

                <li>
                    @Resource.Reduceheat9  @*Reduce heat, remove aluminum foil and leave it for an additional 10 minutes until the fish is completely tender.*@
                </li>
                <li>
                    @Resource.Reddish9  @*Reddish the face and feet hot along with salads or grilled vegetables, as desired.*@
                </li>


            </ol>
        </ul>
    </div>
</fieldset>
